        <form action="/api/pay" method="post" class="collapse" id="MetaMoneyPay">
            <div class="my-5">
                <h2 class="display-4">Meta Money</h2>
                <p>Use our build-in E-money!</p>
            </div>
            <div class="form-group">
                <label for="emoney">Metode Bayar</label>
                <input type="text" readonly class="form-control" id="emoney" aria-describedby="emailHelp" name="emoney" value="metamoney">
            </div>
            <div class="form-group">
                <label for="kodetoko">Kode Kantin</label>
                <input type="text" readonly class="form-control" id="kodetoko" aria-describedby="emailHelp" name="kode" value=<%=kode %>>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Nilai</label>
                <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Masukkan harga yang mau dibayar" name="harga">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                    name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Submit</button>
            <hr class="my-3">
        </form>

        <form action="/api/pay" method="post" class="collapse" id="HarpayPay">
            <div class="my-5">
                <h2 class="display-4">Harpay</h2>
                <p>Use other E-money from other group!</p>
            </div>
            <div class="form-group">
                <label for="emoney">Metode Bayar</label>
                <input type="text" readonly class="form-control" id="emoney" aria-describedby="emailHelp" name="emoney" value="harpay">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="emailH" name="email" placeholder="email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                    name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Submit</button>
            <hr class="my-3">
        </form>
